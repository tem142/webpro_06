<!Doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%= data.name %>
    </title>
</head>

<body>
    <h2>
        <%= data.name %>の詳細
    </h2>
    <table>
        <tr>
            <th>項目</th>
            <th>データ</th>
        </tr>
        <tr>
            <td>ID</td>
            <td>
                <%= data.id %>
            </td>
        </tr>
        <tr>
            <td>名前</td>
            <td>
                <%= data.name %>
            </td>
        </tr>
        <tr>
            <td>年齢</td>
            <td>
                <%= data.age %><a>歳</a>
            </td>
        </tr>
        <tr>
            <td>身長</td>
            <td>
                <%= data.size %><a>cm</a>
            </td>
        </tr>
        <tr>
            <td>体重</td>
            <td>
                <%= data.weight %><a>kg</a>
            </td>
        </tr>
        <tr>
            <td>歌唱曲数</td>
            <td>
                <%= data.song %><a>曲</a>
            </td>
        </tr>
        <tr>
            <td>実装時期</td>
            <td>
                <%= data.period %>
            </td>
        </tr>
        <tr>
            <td>アイドル紹介</td>
            <td>
                <%= data.explanation %>
            </td>
        </tr>
    </table>
    <a href="/idol/edit/<%= id %>">編集</a>
    <a href="/idol">アイドル名簿に戻る</a>
</body>

</html>