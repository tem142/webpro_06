<!Doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%= data.name %>
    </title>
</head>

<body>
    <h2>
        <%= data.name %>の詳細
    </h2>
    <table>
        <tr>
            <th>項目</th>
            <th>データ</th>
        </tr>
        <tr>
            <td>ID</td>
            <td>
                <%= data.id %>
            </td>
        </tr>
        <tr>
            <td>商品名</td>
            <td>
                <%= data.name %>
            </td>
        </tr>
        <tr>
            <td>キャラ名</td>
            <td>
                <%= data.caraname %>
            </td>
        </tr>
        <tr>
            <td>開催期間</td>
            <td>
                <%= data.period %>
            </td>
        </tr>
        <tr>
            <td>ガチャの評価度星</td>
            <td>
                <%= data.level %>
            </td>
        </tr>
        <tr>
            <td>曲名</td>
            <td>
                <%= data.songname %>
            </td>
        </tr>
    </table>
    <button onclick="location.href='/song/edit/<%= id %>'">開催ガチャの情報編集</button>
    <button onclick="location.href='/song/deletek/<%= id %>'">削除</button>
    <button onclick="location.href='/song'">ピックアップガチャ一覧に戻る</button>
</body>

</html>