<!Doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%= data.name %>の情報編集
    </title>
</head>

<body>
    <h2>
        <%= data.name %>の情報編集
    </h2>
    <form action="/keiyo2/update/<%= data.id - 1 %>" method="POST">
        <table>
            <tr>
                <th>項目</th>
                <th>データ</th>
            </tr>
            <tr>
                <td>名前</td>
                <td><input type="text" name="name" value="<%= data.name %>"></td>
            </tr>
            <tr>
                <td>年齢</td>
                <td><input type="text" name="age" value="<%= data.age %>"></td>
            </tr>
            <tr>
                <td>身長</td>
                <td><input type="text" name="size" value="<%= data.size %>"></td>
            </tr>
            <tr>
                <td>体重</td>
                <td><input type="text" name="weight" value="<%= data.weight %>"></td>
            </tr>
            <tr>
                <td>歌唱曲数</td>
                <td><input type="text" name="song" value="<%= data.song %>"></td>
            </tr>
            <tr>
                <td>実装時期</td>
                <td><input type="text" name="period" value="<%= data.period %>"></td>
            </tr>
            <tr>
                <td>アイドル詳細</td>
                <td><input type="text" name="explanation" value="<%= data.explanation %>"></td>
            </tr>
        </table>
        <input type="submit" values="登録">
    </form>
    <button onclick="location.href='/idol/<%= id %>'">アイドル詳細に戻る</button>
</body>

</html>